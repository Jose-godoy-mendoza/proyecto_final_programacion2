<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>controlador</servlet-name>
        <servlet-class>Controlador.controlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controlador_marcas</servlet-name>
        <servlet-class>Controlador.controlador_marcas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controlador_ventas</servlet-name>
        <servlet-class>Controlador.controlador_ventas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>src_cliente</servlet-name>
        <servlet-class>Controlador.src_cliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>src_empleado</servlet-name>
        <servlet-class>Controlador.src_empleado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>src_proveedor</servlet-name>
        <servlet-class>Controlador.src_proveedor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>src_puesto</servlet-name>
        <servlet-class>Controlador.src_puesto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controlador</servlet-name>
        <url-pattern>/controlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controlador_marcas</servlet-name>
        <url-pattern>/controlador_marcas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controlador_ventas</servlet-name>
        <url-pattern>/controlador_ventas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>src_cliente</servlet-name>
        <url-pattern>/src_cliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>src_empleado</servlet-name>
        <url-pattern>/src_empleado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>src_proveedor</servlet-name>
        <url-pattern>/src_proveedor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>src_puesto</servlet-name>
        <url-pattern>/src_puesto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
